<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FirstAidActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="145dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="עזרה ראשונה טרם הגעת מדא"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/stroke"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_margin="10dp"
            android:background="@drawable/stoke"
            android:text="שבץ מוחי"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/burn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_margin="10dp"
            android:background="@drawable/butn"
            android:text="כויות"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/asthma"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/astma"
            android:text="אסטמה"
            android:layout_margin="10dp"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/bleed"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/bleed"
            android:text="דימום"
            android:layout_margin="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/hyperthrmia"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/hyperthermia"
            android:text="מכת חום"
            android:layout_margin="10dp"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/resucitation"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/unconscious"
            android:text="מחוסר הכרה"
            android:layout_margin="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textDirection="firstStrongRtl"
            android:textColor="@android:color/black" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>